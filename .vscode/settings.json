{
  "typescript.preferences.autoImportFileExcludePatterns": [
    "@ionic/angular/common",
    "@ionic/angular"
  ],

  "tailwindCSS.experimental.configFile": "src/global.scss",

  "tailwindCSS.includeLanguages": {
    "html": "html",
    "typescript": "html"
  },

  "editor.quickSuggestions": {
    "strings": "on"
  },


  "editor.inlineSuggest.enabled": true,


  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },

  
  "css.validate": false,
  "scss.validate": false
}
